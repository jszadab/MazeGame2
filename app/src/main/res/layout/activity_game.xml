<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainLinearLayout"
    tools:context=".GameActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:paddingTop="10sp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/chronometr"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp">

                        <Chronometer
                            android:id="@+id/chrono"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:paddingLeft="10sp"
                            android:paddingRight="10sp"
                            android:textSize="25sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/times"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_below="@+id/chronometr"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp">

                        <TextView
                            android:id="@+id/txtBestTimeLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:paddingLeft="10sp"
                            android:paddingRight="10sp"
                            android:text="Best time: "
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txtBestTimeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center_horizontal"
                            android:text=""
                            android:textSize="16sp" />

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/buttons"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp">

                        <Button
                            android:id="@+id/btnAgain"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="onClickBtnAgain"
                            android:paddingLeft="10sp"
                            android:paddingRight="10sp"
                            android:text="Again" />

                        <Button
                            android:id="@+id/btnNext"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="onClickBtnNext"
                            android:paddingLeft="10sp"
                            android:paddingRight="10sp"
                            android:text="Next" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/switches"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_below="@+id/buttons"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp">

                        <Switch
                            android:id="@+id/swLight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="true"
                            android:onClick="lightStateChange"
                            android:paddingLeft="10sp"
                            android:paddingRight="10sp"
                            android:text="Light: "
                            android:textSize="16sp" />

                        <Switch
                            android:id="@+id/swColorMode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="true"
                            android:onClick="colorsStateChange"
                            android:paddingLeft="10sp"
                            android:paddingRight="10sp"
                            android:text="Mode: "
                            android:textSize="16sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/lampInfo"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_below="@+id/switches"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp">

                        <TextView
                            android:id="@+id/txtLampLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="10sp"
                            android:paddingRight="10sp"
                            android:text="Number of lamps to use: "
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txtLampValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:paddingLeft="10sp"
                            android:paddingRight="10sp"
                            android:text=""
                            android:textSize="16sp" />


                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <view
        class="com.github.jszadab.Pathfinder.GameView"
        android:id="@+id/gameview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    </RelativeLayout>


</LinearLayout>